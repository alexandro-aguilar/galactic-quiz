// .devcontainer/devcontainer.json
{
	"name": "Localstack + Node Devcontainer",
	"dockerComposeFile": "docker-compose.yml",
  	"service": "devcontainer",
	"workspaceFolder": "/workspaces/app",
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash"
			}
		}
	},
	// "postCreateCommand": "git config --global user.email \"$GIT_EMAIL\" && git config --global user.name \"$GIT_USERNAME\"",
	"postCreateCommand": "socat TCP-LISTEN:4566,reuseaddr,fork TCP:localstack:4566",
	"mounts": [
		"source=${localEnv:HOME}/.aws,target=/root/.aws,type=bind"
	],
	"remoteEnv": {
		"AWS_PROFILE": "local"
	},
	"remoteUser": "root"
}