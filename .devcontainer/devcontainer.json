// .devcontainer/devcontainer.json
{
	"name": "Localstack + Node Devcontainer",
	"dockerComposeFile": "docker-compose.yml",
  	"service": "devcontainer",
	"workspaceFolder": "/workspaces/app",
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash"
			}
		}
	},
	"postCreateCommand": "git config --global user.email \"$GIT_EMAIL\" && git config --global user.name \"$GIT_USERNAME\" && socat TCP-LISTEN:4566,reuseaddr,fork TCP:localstack:4566 && disown",
	"mounts": [
		"source=${localEnv:HOME}/.aws,target=/root/.aws,type=bind"
	],
	"remoteUser": "root"
}